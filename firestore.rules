
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- 1. QUIZZES (Colección Unificada) ---
    match /quizzes/{quizId} {
      allow read: if resource.data.isPublic == true || (request.auth != null && resource.data.userId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if 
        (request.auth != null && resource.data.userId == request.auth.uid) ||
        (resource.data.isPublic == true && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['visits', 'clones']));
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- 2. EVALUACIONES ARCADE (Configuración de la partida) ---
    match /evaluations/{evalId} {
      // LECTURA: Pública para que los alumnos puedan cargar la config del Boss y el estado del juego
      allow read: if true; 
      // ESCRITURA: El profesor crea/actualiza. 
      // EXCEPCIÓN: Si usas lógica donde el alumno actualiza algo en la evaluación (ej. vida global), permitir update.
      // Por seguridad básica, dejamos update abierto a todos si es una RAID pública, o restringimos si es estricto.
      // Para evitar el error de permisos actual:
      allow create: if request.auth != null; 
      allow update: if true; // Permitimos updates (ej: cambiar estado, bajar vida boss global)
      allow delete: if request.auth != null && resource.data.hostUserId == request.auth.uid;
    }

    // --- 3. INTENTOS / RESULTADOS (Jugadores) ---
    match /attempts/{attemptId} {
      // LECTURA: Pública para el Leaderboard y el Dashboard del profe
      allow read: if true;
      // ESCRITURA: Pública para que los alumnos registren sus ataques/puntuación
      allow create, update: if true;
    }

    // --- 4. GESTIÓN DE CLASES ---
    match /classes/{classId} {
      allow create: if request.auth != null && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;
      allow read: if true; 
    }

    // --- 5. PERFILES DE USUARIO ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if true; 
    }

    // --- 6. CAMPAÑAS ---
    match /campaigns/{campaignId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // --- 7. LOGS DE CAMPAÑA ---
    match /campaign_logs/{logId} {
      allow read, create: if true;
      allow update, delete: if request.auth != null;
    }

    // --- 8. GAMES (Estructura alternativa solicitada) ---
    // Reglas permisivas para el juego en tiempo real
    match /games/{gameId} {
      allow read, write: if true;
      
      match /players/{playerId} {
        allow read, write: if true;
      }
    }
  }
}

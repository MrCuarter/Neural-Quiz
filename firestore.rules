
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- 1. QUIZZES (Colección Unificada) ---
    match /quizzes/{quizId} {
      
      // LECTURA: Permitido si eres el dueño O si el quiz es público (Acceso Universal)
      allow read: if resource.data.isPublic == true || (request.auth != null && resource.data.userId == request.auth.uid);
      
      // CREACIÓN: Solo autenticados y asignándose como dueños
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // EDICIÓN: 
      // 1. Dueño puede editar todo.
      // 2. Público (incluso anónimos) puede incrementar contadores (visits, clones)
      allow update: if 
        (request.auth != null && resource.data.userId == request.auth.uid) ||
        (resource.data.isPublic == true && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['visits', 'clones']));
      
      // BORRADO: Solo el dueño
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- 2. EVALUACIONES ARCADE ---
    match /evaluations/{evalId} {
      allow read: if true; // Alumnos necesitan leer la config para jugar
      allow create: if request.auth != null; 
      allow update: if request.auth != null && resource.data.hostUserId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.hostUserId == request.auth.uid;
    }

    // --- 3. INTENTOS / RESULTADOS ---
    match /attempts/{attemptId} {
      allow read: if true; // Leaderboard público
      allow create: if true; // Alumnos guardan resultados
    }
  }
}

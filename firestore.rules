
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- 1. QUIZZES (Colección de Contenido) ---
    match /quizzes/{quizId} {
      // LECTURA: Pública si el quiz es público, o si eres el dueño.
      allow read: if true; 
      
      // CREAR:
      // a) Usuario Autenticado firma con su UID.
      // b) Usuario Anónimo firma con 'neural_guest_universal'.
      allow create: if 
        (request.auth != null && request.resource.data.userId == request.auth.uid) ||
        (request.resource.data.userId == 'neural_guest_universal');
      
      // ACTUALIZAR / BORRAR:
      // a) SOLO el dueño autenticado.
      // b) Incremento de contadores permitidos para el público (visitas/clones).
      allow update: if 
        (request.auth != null && resource.data.userId == request.auth.uid) ||
        (resource.data.isPublic == true && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['visits', 'clones']));
      
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- 2. EVALUATIONS (Configuración de Partidas Arcade) ---
    match /evaluations/{evalId} {
      allow read: if true; 
      // Permitir crear si está autenticado (Profesor/AnonAuth) O si usa la identidad universal de invitado
      allow create, update, delete: if request.auth != null || request.resource.data.hostUserId == 'neural_guest_universal';
    }

    // --- 3. GAMEPLAY (Raid Mode & Arcade) ---
    match /attempts/{attemptId} {
      allow read, write: if true;
    }

    match /games/{gameId} {
      allow read, write: if true;
    }

    // --- 4. GESTIÓN DE CLASES ---
    match /classes/{classId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.teacherId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;
    }

    // --- 5. USUARIOS (Perfiles y Límites) ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- 6. OTROS (Campañas Legacy) ---
    match /campaigns/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    match /campaign_logs/{document=**} {
      allow read, write: if true;
    }
  }
}
